{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["src/components/*"],
      "@/lib/*": ["src/lib/*"],
      "@/styles/*": ["src/styles/*"],
      "@/app/*": ["src/app/*"],
      "@/data/*": ["src/data/*"],
      "@/i18n/*": ["src/i18n/*"],
      "@/types": ["src/types.d.ts"],
    },
    "types": ["node"],
    "incremental": true,
    "plugins": [
      {
        "name": "next",
      },
    ],
  },
  "include": ["src", ".next/types/**/*.ts"],
  "exclude": ["node_modules"],
}
